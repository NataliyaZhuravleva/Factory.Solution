@{
  Layout="_Layout";
}

@using Factory.Models;
@model List<Factory.Models.Machine>;

<h2>Machines</h2>
<hr />
@if (@Model.Count == 0)
{
  <h3>No machines have been added yet!</h3>
}

<ul>
  @foreach (Machine machine in Model)
  {
      <li>@Html.ActionLink($"{machine.MachineBrandName + " " + machine.MachineModelName + "(" + machine.MachineProductionYear + ")"}", "Details", new {id = machine.MachineId})</li>
  }
</ul>
<hr />
<p>@Html.ActionLink("Home", "Index", "Home")</p>