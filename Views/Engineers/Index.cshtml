@{
  Layout = "_Layout";
}

@using Factory.Models;
@model List<Factory.Models.Engineer>;

  <h2>Engineers</h2>
  <hr />
  @if (Model.Count == 0)
  {
    <h3>No engineers have been added yet!</h3>
  }

  <ul>
    @foreach (Engineer engineer in Model)
    {
      <li>@Html.ActionLink($"{engineer.EngineerFirstName + " " + engineer.EngineerLastName}", "Details", new {id = engineer.EngineerId})</li>
    }
  </ul>
<hr />
<p>@Html.ActionLink("Add new engineer", "Create")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>
